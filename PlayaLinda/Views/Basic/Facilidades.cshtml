                            <h4 class="card-title">@Html.DisplayFor(modelItem => item.nombre) </h4>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.reglas) </p>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.detalles) </p>

                        </div>
                    </div>
                    <br />
                    <br />
                </div>
                }
            </div>









