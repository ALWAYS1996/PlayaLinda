}


    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-sm-6" style="width: 10rem;">
             
                    <div class="card" style="width:400px">
                        <img class="card-img-top" src='@Html.DisplayFor(modelItem => item.urlImg)' alt="Card image">
