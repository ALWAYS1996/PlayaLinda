@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>

<body>
    <br>
    <br>
    <br>
  
        <div class="container">
            <div class="row">
              
                <div class="col-md-4">

                </div>
                <div class="col-md-4">
                    @ViewBag.mensaje

                    <form action="/Empleado/Login" method="post">
                        <hr style="color: #47748b">
                        <center><strong> Inicio de Sesion</strong></center>
                        <hr style="color: #47748b">
                        <center>
                            <div class="form-group">
                                <input type="hidden" value="1" class="form-control" id="idTipoUsuario" name="idTipoUsuario" placeholder="Ingrese el nombre de Usuario">

                                <label for="name=" idUsuario"">Usuario</label>
                                <input type="text" class="form-control" id="idUsuario" value="admin" name="idUsuario" aria-describedby="Usuario" placeholder="Ingrese su Usuario">
                            </div>
                            <div class="form-group">
                                <label for="contrasenna">Contraseña</label>
                                <input type="password" class="form-control" id="contrasenna" value="admin" name="contrasenna" placeholder="Ingrese su clave">
                            </div>
                            <div class="form-group">
                                <hr style="color: #47748b">
                                <br>

                                <button type="submit" class="btn btn-primary">Iniciar sesion.</button>

                                <a class="btn btn-primary" href="/Contenido/Inicio">
                                    Regresar
                                </a>
                            </div>
                        </center>
                    </form>
                    
                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>

    
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
</body>
</html>

