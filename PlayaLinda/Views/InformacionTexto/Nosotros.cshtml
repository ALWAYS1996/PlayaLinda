@model IEnumerable<ENTIDAD.InformacionTexto>

@{ var listadoGaleriaTexto = (IEnumerable<ENTIDAD.InformacionTexto>)ViewData["listadoGaleriaTexto"];

}


<link href="~/Content/css/estiloGaleriaImagenes.css" rel="stylesheet" />
<body class="scroll">

    <div class="container ">
        <div class="row">


            <div class="col-12">
                @foreach (var dato in listadoGaleriaTexto)
                {
                    <center>  <h3 class="titulo" style="color:black; background-color:cornflowerblue"> @Html.DisplayFor(modelItem => dato.titulo)</h3></center>
                    <br>
                    <center>  <div style="color:black"> @Html.DisplayFor(modelItem => dato.contenido) </div></center>

                }
            </div>
        </div>
        <br>
        <br>
        <a href="/Itinerario/Itinerario">
            <img src="~/Content/img/calendario.svg" height="30" width="30" />Ver  Itinerario del Hotel
        </a>
        <br>
        <br>
        <div class="contenedor-galeria">
            @foreach (var item in Model)
            {
                <img src="@Html.DisplayFor(modelItem=> item.rutaImagen)" class="galeria__img" />
            }
        </div>

    </div>
</body>
